/* pages/inquiry/inquiry.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 0;
  padding: 0;
}

.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  justify-content: flex-start;
  padding-left: 20rpx;
}
.tab {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 40rpx; 
}
.tab.active {
  color: #07C160;
  border-bottom: 2rpx solid #07C160;
}

.list {
  flex: 1;
  padding: 20rpx;
}
.item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.item-content {
  flex: 1;
}
.item-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.item-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}
.item-time {
  font-size: 22rpx;
  color: #999;
}
.item-status {
  color: #07C160;
  font-size: 24rpx;
  align-self: center;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.footer {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.manage-btn {
  background: #07C160;
  color: #fff;
  border-radius: 50rpx;
}
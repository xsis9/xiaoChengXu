/* 页面容器 */
.coupon-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: #fff;
  padding: 40rpx;
  position: relative;
}



/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.empty-tip image {
  width: 1000rpx;
  height: 1000rpx;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: linear-gradient(to right, #ff9500, #ff5000);
  color: white;
  border-radius: 45rpx;
  font-size: 36rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 80, 0, 0.2);
  position: fixed; /* 改为固定定位 */
  bottom: 40rpx; /* 距离底部40rpx */
}
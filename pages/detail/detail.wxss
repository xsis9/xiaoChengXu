.container {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.banner {
  width: 100%;
  height: 500rpx;
  display: block;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.05);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.name {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.price {
  font-size: 44rpx;
  color: #e63946;
  font-weight: bold;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 40rpx;
}

.tag {
  background: #4361ee;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 32rpx;
  background: #4361ee;
  border-radius: 4rpx;
}

.content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.1);
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  margin: 0 15rpx;
  font-size: 30rpx;
  line-height: 2.8;
}

.secondary {
  background: #f1f2f6;
  color: #4a4e69;
}

.primary {
  background: linear-gradient(to right, #4361ee, #3f37c9);
  color: white;
}
.detail-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.detail-image {
  width: 100%;
  display: block;
}

.detail-content {
  padding: 30rpx;
}

.detail-header {
  margin-bottom: 40rpx;
  position: relative;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.detail-tag {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  color: white;
}

.detail-tag.food {
  background-color: #e64340;
}

.detail-tag.attraction {
  background-color: #09bb07;
}

.detail-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 34rpx;
  background-color: #e64340;
  border-radius: 4rpx;
}

.section-content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  display: block;
}

.tips {
  color: #e64340;
  font-weight: 500;
}

.detail-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: white;
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.05);
}

.back-btn {
  background-color: #e64340;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}
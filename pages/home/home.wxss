/* town-intro.wxss */
.container {
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

.swiper {
  height: 400rpx;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

.title-section {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(to bottom, #ffffff, #f8f9fa);
}
.town-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.town-slogan {
  font-size: 28rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-container {
  display: flex;
  flex-wrap: nowrap; /* 确保不换行 */
  width: 100%; /* 设置宽度 */
  overflow: hidden; /* 隐藏溢出内容 */
}

/* 卡片样式调整 */
.card {
  width: 280rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 25rpx;
  flex-shrink: 0; /* 防止卡片被压缩 */
  background: white;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
}
.card-image {
  width: 100%;
  height: 180rpx;
}
.card-content {
  padding: 20rpx;
}
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.card-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 8rpx;
  white-space: normal;
}

.history-container {
  display: flex;
}
.history-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}
.history-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.food-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.food-item {
  width: 48%;
  margin-bottom: 25rpx;
  text-align: center;
}
.food-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}
.food-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-top: 10rpx;
}

.footer {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.contact-btn, .route-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.contact-btn {
  background: #ffd700;
  color: #333;
}
.route-btn {
  background: #4a90e2;
  color: white;
}

.category-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 50rpx;
  margin: 0 0 40rpx;
   /* 添加宽度控制 */
   width: 92%;                /* 设置容器宽度为屏幕的92% */
   margin-left: auto;         /* 保持左右居中 */
   margin-right: auto;        /* 保持左右居中 */
   align-items: center;       /* 确保内部元素居中 */
}

.category-card {
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.3);
  transition: all 0.3s ease;
  height: 350rpx; /* 增加高度 */
  position: relative;
  overflow: hidden;
  width: 100%; /* 加宽按钮 */
}

.category-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0,0,0,0.4), rgba(0,0,0,0.2));
  z-index: 1;
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.25);
}

.category-name {
  font-size: 44rpx;
  color: white;
  font-weight: 700;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 2;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.5);
  letter-spacing: 1rpx;
}

.category-desc {
  font-size: 30rpx;
  color: rgba(255,255,255,0.95);
  position: relative;
  z-index: 2;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  padding: 0 40rpx;
}


/* index.wxss */
.container {
  padding: 30rpx 40rpx 40rpx;
  background: linear-gradient(155deg, #4a69ff 0%, #304ffe 40%, #1a237e 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.header {
  padding: 50rpx 0 30rpx;
  text-align: center;
}

.title {
  font-size: 56rpx;
  color: white;
  font-weight: 800;
  display: block;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.25);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255,255,255,0.92);
  margin-top: 18rpx;
  display: block;
  font-weight: 400;
}

.category-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 50rpx;
  margin: 0 0 40rpx;
   /* 添加宽度控制 */
   width: 92%;                /* 设置容器宽度为屏幕的92% */
   margin-left: auto;         /* 保持左右居中 */
   margin-right: auto;        /* 保持左右居中 */
   align-items: center;       /* 确保内部元素居中 */
}

.category-card {
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.3);
  transition: all 0.3s ease;
  height: 350rpx; /* 增加高度 */
  position: relative;
  overflow: hidden;
  width: 100%; /* 加宽按钮 */
}

.category-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0,0,0,0.4), rgba(0,0,0,0.2));
  z-index: 1;
}

.category-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.25);
}

.category-name {
  font-size: 44rpx;
  color: white;
  font-weight: 700;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 2;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.5);
  letter-spacing: 1rpx;
}

.category-desc {
  font-size: 30rpx;
  color: rgba(255,255,255,0.95);
  position: relative;
  z-index: 2;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  padding: 0 40rpx;
}

/* 底部装饰样式 */
.bottom-decor {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  padding: 30rpx 0;
}

.dash {
  height: 1px;
  background: rgba(255,255,255,0.2);
  flex: 1;
  max-width: 150rpx;
}

.app-name {
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
  font-weight: 300;
}
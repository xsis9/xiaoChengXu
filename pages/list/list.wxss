.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  padding: 30rpx;
  background: linear-gradient(to right, #4361ee, #3f37c9);
  border-radius: 0 0 20rpx 20rpx;
}

.title {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  display: block;
  text-align: center;
}

.scroll-container {
  height: calc(100vh - 160rpx);
  padding: 20rpx 0;
}

.item-card {
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.08);
}

.item-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.item-price {
  font-size: 36rpx;
  color: #e63946;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #e0e1e9;
  color: #4a4e69;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}
<!--pages/order/order.wxml-->
<view class="container">
  <!-- 订单状态筛选 -->
  <scroll-view class="tab-bar" scroll-x>
    <view 
      class="tab-item {{currentTab === 0 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="0"
    >
      全部
    </view>
    <view 
      class="tab-item {{currentTab === 1 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="1"
    >
      待付款
    </view>
    <view 
      class="tab-item {{currentTab === 2 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="2"
    >
      待发货
    </view>
    <view 
      class="tab-item {{currentTab === 3 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="3"
    >
      待收货/服务中
    </view>
    <view 
      class="tab-item {{currentTab === 4 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="4"
    >
      已完成
    </view>
    <view 
      class="tab-item {{currentTab === 5 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="5"
    >
      已取消
    </view>
  </scroll-view>
  <view class="order-list">
    <!-- 内容根据currentTab变化 -->
  </view>
  
  <!-- 订单列表 -->
  <view class="order-list">
    <block wx:if="{{orders.length > 0}}">
      <view class="order-item" wx:for="{{orders}}" wx:key="id">
        <!-- 这里放置订单内容 -->
        <view class="order-info">
          <text>订单号: {{item.orderNo}}</text>
          <text>状态: {{item.status}}</text>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="empty-state">
        <image src="/images/empty-order.png" mode="aspectFit"></image>
      </view>
    </block>
  </view>
</view>
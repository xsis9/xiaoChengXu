/* 夜间主题变量 */
page {
  --bg-color: #ffffff;
  --card-bg: #ffffff;
  --text-primary: rgba(10, 0, 0, 0.9);
  --text-secondary: rgba(31, 27, 27, 0.6);
  --accent: #07c160;           /* 微信绿 */
  --border-color: rgba(255, 255, 255, 0.08);
  --shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.35);
}

/* 全局重置 */
page {
  background: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  color: var(--text-primary);
  padding: 40rpx;
}

/* 卡片容器 */
.card {
  position: relative;
  background: var(--card-bg);
  border-radius: 24rpx;
  box-shadow: var(--shadow);
  padding: 48rpx;
  margin-bottom: 40rpx;
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  color: var(--text-primary);
}

/* 联系电话行 */
.phone-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.phone-row:last-child {
  border-bottom: none;
}

.phone-label {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.phone-number {
  font-size: 34rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 点击态 */
.phone-row:active {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
}

/* 图标（可选） */
.phone-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}